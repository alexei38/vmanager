<div class="container">
  <div class="well form-signin">

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <h2 class="form-signin-heading">Авторизация</h2>

    <%= f.text_field :username, :autofocus => true, :class => "input-block-level", :placeholder => "Login" %> 
    <%= f.password_field :password, :class => "input-block-level", :placeholder => "Password" %>

     <%= f.label :remember_me, nil, :class => 'checkbox' do %>
       <%= f.check_box :remember_me %> Запомнить меня
     <% end %>
    <%= f.submit "Sign in", :class => "btn btn-large btn-primary" %>

  <% end %>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>

  </div>
</div>
