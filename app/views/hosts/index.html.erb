<div class="container">
  <div class="row">
    <%= render 'store/left' %>
    <div class="span9">
            
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>

      <div class="page-header">
        <h1>Hosts</h1>
      </div>

      <% if @hosts.count > 0 %>

        <table class="table table-striped table-center" >
          <thead>
            <tr>
              <th>Name</th>
              <th style="text-align:center">Status</th>
              <th>Vcpu</th>
              <th>Memory</th>
            </tr>
          </thead>
          <tbody>
            <% @hosts.each do |host| %>
              <tr>
                <td><%= link_to host.name, host_path(host) %></td>
                <td>
                  <% if host.connect? %>
                    <%= content_tag(:span, 'Active', :class => 'text-success') %> 
                  <% else %>
                    <%= content_tag(:span, 'No connection', :class => 'text-error') %> 
                  <% end %>
                </td>
                <td><%= host.get_vcpu %></td>
                <td><%= number_to_human_size host.get_memory_max %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      <% else %>
        <div class="well" style="text-align: center;">
          <h4 style="font-size: 18px;font-weight: 500;">Добавьте новый хост</h4>
        </div>
      <% end %>

      <!-- Button to trigger modal -->
        <a data-toggle="modal" href="#myModal" class="btn btn-primary">Add host</a>
      <!-- Modal -->

        <div style="display: none;" id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">Add host</h3>
          </div>
          <div class="modal-body">
            <div class="tabbable">
              <ul class="nav nav-tabs">
                <li class="active"><a href="#tab1" data-toggle="tab">TCP Connection</a></li>
                <li><a href="#tab2" data-toggle="tab">SSH Connection</a></li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane active" id="tab1">
                  <form class="form-horizontal">
                    <div class="control-group">
                      <label class="control-label" for="hostname">Name</label>
                      <div class="controls">
                        <input type="text" id="hostname" placeholder="Hostname">
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label" for="ip">IP / Domain</label>
                      <div class="controls">
                        <input type="text" id="ip" placeholder="IP Address">
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label" for="tcp_login">Login</label>
                      <div class="controls">
                        <input type="text" id="tcp_login" placeholder="Login">
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label" for="tcp_password">Password</label>
                      <div class="controls">
                        <input type="text" id="tcp_password" placeholder="Password">
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label" for="tcp_confirm_password">Confirm Password</label>
                      <div class="controls">
                        <input type="text" id="tcp_confirm_password" placeholder="Confirm Password">
                      </div>
                    </div>
                  </form>
                </div>

                <div class="tab-pane" id="tab2">
                  <form class="form-horizontal">
                    <div class="control-group">
                      <label class="control-label" for="hostname">Name</label>
                      <div class="controls">
                        <input type="text" id="hostname" placeholder="Hostname">
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label" for="ip">IP / Domain</label>
                      <div class="controls">
                        <input type="text" id="ip" placeholder="IP Address">
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label" for="ssh_login">SSH Login</label>
                      <div class="controls">
                        <input type="text" id="ssh_login" placeholder="SSH Login">
                      </div>
                    </div>
                    <div class="control-group">
                      <label class="control-label" for="ssh_port">SSH Port</label>
                      <div class="controls">
                        <input type="text" id="ssh_port" placeholder="SSH Port">
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button class="btn" data-dismiss="modal">Close</button>
            <button class="btn btn-primary">Add</button>
          </div>
        </div>


    </div>
  </div>
</div>
