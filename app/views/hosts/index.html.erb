<div class="container">
  <div class="row">
    <%= render 'store/left' %>
    <div class="span9">
            
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>

      <div class="page-header">
        <h1>Hosts</h1>
      </div>

      <% if @hosts.count > 0 %>

        <table class="table table-striped table-center" >
          <thead>
            <tr>
              <th>Name</th>
              <th style="text-align:center">Status</th>
              <th>Vcpu</th>
              <th>Memory</th>
            </tr>
          </thead>
          <tbody>
            <% @hosts.each do |host| %>
              <tr>
                <td><%= link_to host.name, host_path(host) %></td>
                <td>
                  <% if host.connect? %>
                    <%= content_tag(:span, 'Active', :class => 'text-success') %> 
                  <% else %>
                    <%= content_tag(:span, 'No connection', :class => 'text-error') %> 
                  <% end %>
                </td>
                <td><%= host.get_vcpu %></td>
                <td><%= number_to_human_size host.get_memory_max %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

      <% else %>
        <div class="well" style="text-align: center;">
          <h4 style="font-size: 18px;font-weight: 500;">Add a new host</h4>
        </div>
      <% end %>

        <a data-toggle="modal" href="#addHostModal" class="btn btn-primary">Add host</a>

        <script type="text/javascript">
          $(document).ready(function() {
            $('#addHostModal .btn-primary').click(function(e) {
              e.preventDefault();
              $('#addHostModal').modal('hide');
              $("#addHostModal div.tab-content div.active form").submit();
            });
          });
        </script>

        <div style="display: none;" id="addHostModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="addHostModalLabel" aria-hidden="true">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
            <h3 id="addHostModalLabel">Add host</h3>
          </div>
          <div class="modal-body">
            <div class="tabbable">
              <ul class="nav nav-tabs">
                <li class="active"><a href="#tab1" data-toggle="tab">TCP Connection</a></li>
                <li><a href="#tab2" data-toggle="tab">SSH Connection</a></li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane active" id="tab1">
                  <%= form_tag hosts_path, :class => 'form-horizontal', remote: true do %>
                    <input type="hidden" name="type" id="type" value="tcp" />
                    <%= custom_form "hostname", "Hostname" %>
                    <%= custom_form "ip", "IP / Domain" %>
                    <%= custom_form "tcp_login", "Login" %>
                    <%= custom_form "tcp_password", "Password", true %>
                    <%= custom_form "tcp_confirm_password", "Confirm Password", true %>
                  <% end %>
                </div>

                <div class="tab-pane" id="tab2">
                  <%= form_tag hosts_path, :class => 'form-horizontal', remote: true do %>
                    <input type="hidden" name="type" id="type" value="ssh" />
                    <%= custom_form "hostname", "Hostname" %>
                    <%= custom_form "ip", "IP / Domain" %>
                    <%= custom_form "ssh_login", "SSH Login" %>
                    <%= custom_form "ssh_port", "SSH Port" %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button class="btn" data-dismiss="modal">Close</button>
            <button class="btn btn-primary">Add</button>
          </div>
        </div>

    </div>
  </div>
</div>
