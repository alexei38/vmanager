<!DOCTYPE html>
<html>
<head>
  <title>Vmanager</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Vmanager", root_path, :class => "brand" %>
      <div class="nav-collapse collapse">
        <% if user_signed_in? %>
        <ul class="nav pull-right">
          <li class="dropdown">
            <%= link_to user_path(current_user), :class => "dropdown-toggle", :data => {:toggle=>"dropdown"} do %>
              <%= [current_user.lastname, current_user.firstname].join(' ') %> <%= content_tag(:span, '', :class => 'caret') %>
            <% end %>
            <ul class="dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  <%= content_tag(:span, '', :class => 'icon-user') %> Профиль
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, :method => :delete do %>
                  <%= content_tag(:span, '', :class => 'icon-lock') %> Logout
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
<header style="position: relative;padding: 40px 0px;"></header>

<%= yield %>


</body>
</html>
